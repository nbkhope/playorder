      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag product.image.url %>
          <div class="caption">
            <p><span class="genre"><%= category %></span></p>
            <h3><%= product.title %></h3>
            <p><%= product.phrase %></p>
            <p><%= image_tag "index/card-line.png" %>
