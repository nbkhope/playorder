            <%= image_tag product.user.image.url(:thumb), class: 'circle' %>
          </div>
          <div class="card-profile">
            <p class="namae"><%= product.user.name %></p>
            <p class="shozoku"><%= product.user.organization %></p>
         </div>
        </div>
      </div>
    </div>
