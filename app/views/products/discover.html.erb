    <script>
    /* nav-toggle */
    $(function(){
      $(".nav-index li").on("click" , function(){
        var num = $(".nav-index li").index(this);
        $(".contents").fadeOut();
        $(".contents").eq(num).fadeIn();
        $(".nav-index li").removeClass('select');
        $(".nav-index li").eq(num).addClass('select');
      });
    });

    /* page-toggle */
    $(function(){
      $(".page-nav-index li").on("click" , function(){
        var num = $(".page-nav-index li").index(this);
        $(".page-contents").fadeOut();
        $(".page-contents").eq(num).fadeIn();
        $(".page-nav-index li").removeClass('select');
        $(".page-nav-index li").eq(num).addClass('select');
      });
    });

    /* main-toggle */

    $(function(){
      $(".main-nav-index li").on("click" , function(){
        var num = $(".main-nav-index li").index(this);
        $(".main-contents").fadeOut();
        $(".main-contents").eq(num).fadeIn();
        $(".main-nav-index li").removeClass('select');
        $(".main-nav-index li").eq(num).addClass('select');
      });
    });

    /* slider-toggle */
    $(function(){
      $(".nav-index li").on("click" , function(){
        var num = $(".nav-index li").index(this);
        $(".sliders").fadeOut();
        $(".sliders").eq(num).fadeIn();
        $(".nav-index li").removeClass('select');
        $(".nav-index li").eq(num).addClass('select');
      });
    });
    </script>
  <style>
  </style>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <!-- discover -->
    <!-- slider -->
    <section class="discover-slider">
      <!-- wear -->
      <div class="jumbotron sliders">
        <h1>WEAR</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>
      <!-- eat -->
      <div class="jumbotron sliders opace">
        <h1>EAT</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>
      <!-- touch -->
      <div class="jumbotron sliders opace">
        <h1>TOUCH</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>
      <!-- display -->
      <div class="jumbotron sliders opace">
        <h1>DISPLAY</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>
      <!-- travel -->
      <div class="jumbotron sliders opace">
        <h1>TRAVEL</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>
      <!-- listen -->
      <div class="jumbotron sliders opace">
        <h1>LISTEN</h1>
        <p>Show you the dress, boots or high-quality brands.</p>
      </div>

    </section>

    <div class="container-2">

      <!-- side -->
      <aside class="discover-side">
        <h2>Discover</h2>
        <ul class='bar nav-index'>
          <li>WEAR</li>
          <li>EAT</li>
          <li>TOUCH</li>
          <li>DISPLAY</li>
          <li>TRAVEL</li>
          <li>LISTEN</li>
        </ul>
      </aside>

      <!-- main -->
      <section class="discover-main">
        <nav class="container global-nav">
          <ul class="nav main-nav-index">
            <li class="select">POPULAR</li>
            <li>PRICE</li>
            <li>NEW</li>
            <li>ARRIVING</li>
          </ul>
        </nav>

        <div class="discover-roll">
          <% @products.keys.each_with_index do |category, i| %>
            <% if i == 0 %>
              <ul class="contents card">
            <% else %>
              <ul class="contents card opace">
            <% end %>

            <% @products[category].each do |product| %>
            <%= render 'common/card' %>
            <% end %>
            </ul>
          <% end %>

          <nav class="discover-bottom">
            <ul class="pager page-nav-index">
              <li><a href="#">Previous</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </nav>

        </div>
      </div>
    </section>

    </div>
  <%= render 'layouts/footer' %>
  </body>
</html>
